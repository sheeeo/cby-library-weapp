/* pages/aboutMe/aboutMe.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  margin: 20rpx;
}

.book_flex {
  display: flex;
  flex: 1;
}

.body {
  flex: 1;
  width: 100%;
  padding-left: 20px;
  padding-top: 24px;
}

.container {
  flex: 1;
}

.pic {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  padding-left: 10px;
  padding-right: 10px;
}

.con {
  display: flex;
  flex-direction: column;
}

.pic {
  width: 30%;
  height: 160px;
}

.name {
  width: 30%;
  text-align: center;
}
